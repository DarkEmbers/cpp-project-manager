{
	"name": "cpp-project-manager",
	"displayName": "C++ Project Manager",
	"description": "",
	"publisher": "DarkEmbers",
	"author": {
		"name": "Harihar Thachapully"
	},
	"version": "1.0.0",
	"keywords": ["C", "Project", "Manage", "Cmake"],
	"homepage": "https://github.com/DarkEmbers/cpp-project-manager",
	"repository": {
		"type": "git",
		"url": "https://github.com/DarkEmbers/cpp-project-manager"
	},
	"bugs": {
		"url": "https://github.com/DarkEmbers/cpp-project-manager/issues"
	},
	"icon": "images/Icon.png",
	"license": "SEE LICENSE IN LICENSE",
	"os": [""],
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:cpp-project-manager.NewProject",
		"onCommand:cpp-project-manager.NewClass",
		"onCommand:cpp-project-manager.RunExe",
		"onView:nodeDependencies"
	],
	"main": "./src/extension.js",
	"contributes": {
		"viewsWelcome": [
			{
				"view": "explorer",
				"contents": "Create a new C++ Project.\n[Create C++ Project](command:cpp-project-manager.NewProject)"
			}
		],
		"commands": [
			{
				"command": "cpp-project-manager.NewProject",
				"title": "C++: New Project"
			},
			{
				"command": "cpp-project-manager.NewClass",
				"title": "C++: New C++ Class"
			},
			{
				"command": "cpp-project-manager.RunExe",
				"title": "C++: Run Exe"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "resourceLangId == cpp || resourceLangId == c",
					"command": "cpp-project-manager.RunExe",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.62.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"@vscode/test-electron": "^1.6.2"
	}

}
